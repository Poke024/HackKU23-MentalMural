@inject HttpClient Http
@using MentalMural.Shared

<button class="menuButton" @onclick="OnButtonClick"><img src="journal.png" alt="Open Journal Menu"></button>
<JournalMenuAnime AnimationTime="1.5s" IsShown=@isShown FirstLoad=@firstLoad />
@code {
    bool firstLoad = true;
    bool isShown = false;

    private void OnButtonClick()
    {
        isShown = !isShown;
        if (firstLoad == true)
        {
            firstLoad = false;
        }
    }
}
