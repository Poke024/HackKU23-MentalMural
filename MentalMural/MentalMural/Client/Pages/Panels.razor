<div class="centerBox">
    <div class="panelContainer">  
        <button @onclick="OnButtonClickOne" class="panel">
            <div class="content">
                <p>Setting<br />Goals</p>
            </div>
        </button>
        <button @onclick="OnButtonClickTwo" class="panel">
            <div class="content">
                <p>Developing<br />Habits</p>
            </div>
        </button>
        <button @onclick="OnButtonClickThree" class="panel">
            <div class="content">
                <p>Writing<br />Prompts</p>
            </div>
        </button>
        <button @onclick="OnButtonClickFour" class="panel">
            <div class="content">
                <p>Support<br />Resources</p>
            </div>
        </button>
    </div>
    <div>
        <PanelsAnime AnimationTime="1.5s" IsShown=@isShown[0] FirstLoad=@firstLoad[0] Items=@goalItems/>
        <PanelsAnime AnimationTime="1.5s" IsShown=@isShown[1] FirstLoad=@firstLoad[1] Items=@habitItems />
        <PanelsAnime AnimationTime="1.5s" IsShown=@isShown[2] FirstLoad=@firstLoad[2] Items=@promptsItems />
        <PanelsAnime AnimationTime="1.5s" IsShown=@isShown[3] FirstLoad=@firstLoad[3] Items=@resourcesItems />
    </div>
</div>
@code {
    bool[] firstLoad = { true, true, true, true };
    bool[] isShown = { false, false, false, false };

    private void OnButtonClickOne()
    {
        isShown[0] = !(isShown[0]);
        if (firstLoad[0] == true)
        {
            firstLoad[0] = false;
        }
    }
    private void OnButtonClickTwo()
    {
        isShown[1] = !(isShown[1]);
        if (firstLoad[1] == true)
        {
            firstLoad[1] = false;
        }
    }
    private void OnButtonClickThree()
    {
        isShown[2] = !(isShown[2]);
        if (firstLoad[2] == true)
        {
            firstLoad[2] = false;
        }
    }
    private void OnButtonClickFour()
    {
        isShown[3] = !(isShown[3]);
        if (firstLoad[3] == true)
        {
            firstLoad[3] = false;
        }
    }
}
@code {
    [Parameter] public string? AnimationTime { get; set; }
    [Parameter] public bool IsShown { get; set; }
    [Parameter] public bool FirstLoad { get; set; }

    public string[] goalItems = { "Drink 8 cups of water today.",
                                    "Spend 1 - 2 hours working on a hobby.",
                                    "Spend 1 - 2 hours working on a new skill.",
                                    "More Coming Soon!" };

    public string[] habitItems = { "Try clearing a few items on your desk each time you see this prompt.",
                                    "Try drinking water when you first feel hungry to help stave off cravings.",
                                    "More Coming Soon!" };

    public string[] promptsItems = { "How did the weather today affect your mood?",
                                        "What was your favorite moment of the day?",
                                        "Note down anything on your mind before heading to bed.",
                                        "More Coming Soon!" };

    public string[] resourcesItems = { "Suicide & Crisis Lifeline: 988",
                                        "More Coming Soon! (After vetting them of course!)" };


}
