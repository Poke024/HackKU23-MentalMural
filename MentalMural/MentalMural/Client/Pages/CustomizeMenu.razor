<button class="menuButton" @onclick="OnButtonClick">Customize</button>
<CustomizeMenuAnime AnimationTime="1.5s" IsShown=@isShown FirstLoad=@firstLoad/>
@code{
    bool firstLoad = true;
    bool isShown = false;

    private void OnButtonClick() 
    {
        isShown = !isShown;
        if (firstLoad == true) {
            firstLoad = false;
        }
    }
}
